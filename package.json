{
  "contributors": [
    "Andrew Udvare <audvare@gmail.com>"
  ],
  "devDependencies": {
    "cspell": "^6.31.1",
    "prettier": "^2.8.8",
    "prettier-plugin-ini": "^1.1.0",
    "prettier-plugin-toml": "^0.3.1"
  },
  "license": "MIT",
  "name": "portage-types",
  "repository": "git@github.com:Tatsh/portage-types.git",
  "scripts": {
    "check-formatting": "prettier -c './**/*.cfg' './**/*.ini' './**/*.md' './**/*.toml' './**/*.yml' ./.prettierrc ./.style.yapf && isort . --check && yapf -rd portage-stubs/*/*.pyi portage-stubs/*.pyi",
    "check-spelling": "cspell --no-progress './**/*'  './**/.*'",
    "format": "prettier -w './**/*.cfg' './**/*.ini' './**/*.md' './**/*.toml' './**/*.yml' ./.prettierrc ./.style.yapf && isort . && yapf -ri portage-stubs/*/*.pyi portage-stubs/*.pyi",
    "install-python-deps": "python -m pip install --upgrade pip && pip install poetry && poetry install && pip install -e . && pip install mypy pylint pylint-quotes pytest pytest-cov coveralls pytest-mock types-requests toml yapf",
    "pylint": "pylint portage-stubs/*/*.pyi portage-stubs/*.pyi",
    "qa": "yarn pylint && yarn check-spelling && yarn check-formatting"
  },
  "version": "0.0.4"
}
